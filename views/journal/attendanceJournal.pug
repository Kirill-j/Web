extends ../head
block append scripts
    // подключаем скрипт
    script(src="/js/scriptAttendanceJournal.js")
block content
    a(href="/addAttendanceMark" class="btn btn-success") Добавить отметки посещаемости
    div(class="form-group mb-3")
        select(name="student_group_id" id="student_group_id" class="form-select")
            each el in studentGroups
                option(value=el.id) #{el.name}
        div(class="form-group mb-3")
            input(name="date_pair" id="date_pair" type="date" placeholder="Дата занятий" required class="form-control")
        div(id="attendance_table_id")

    form(action="/deleteAttendance", method="POST")
        input(type="hidden", name="student_group_id", id="hidden_group_id")
        input(type="hidden", name="date_pair", id="hidden_date_pair")
        input(type="submit", value="Удалить" class="btn btn-danger")
