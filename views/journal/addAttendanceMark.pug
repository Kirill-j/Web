extends ../head
block append scripts
    // подключаем скрипт
    script(src="/js/scriptAddAttendance.js")
block content
    form(action="/addAttendanceMark", method="POST")
        select(name="student_group_id" id="student_group_id")
            each el in studentGroups
                option(value=el.id) #{el.name}
        input(name="date_pair" id="date_pair" type="date" placeholder="Дата занятий" required)
        div(id="attendance_table_id")
        input(type="submit" value="Добавить")