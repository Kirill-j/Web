extends ./head
block content

    h1 #{title}

    h2 Условия
    //- Переменная
    - const isLogin = true;
    //- Использование переменной
    if isLogin
        p(style="color: green") Добро пожаловать!
    else 
        p(style="color: red") Зарегистрируйтесь!

    h2 Циклы и переменные
    //- Переменная
    -
        const title_table = "Таблица рейтинга пользователей"
        const users = [
            { name: 'Petr', surname: 'Ivanov', login: 'petanov', scores: 1271 },
            { name: 'Ivan', surname: 'Petrov', login: 'ivatrov', scores: 1254 },
            { name: 'Anna', surname: 'Sidorova', login: 'ansid', scores: 1389 }
        ]

    h2= title_table

    table(border="1", cellpadding="5")
        thead 
            tr 
                th №
                th Имя
                th Фамилия
                th Логин
                th Баллы
        tbody
            each user, index in users
                tr 
                    td= index + 1
                    td= user.name 
                    td= user.surname 
                    td= user.login 
                    td= user.scores
            else
                tr 
                    td(colspan='5') Нет пользователей

    h2 Конструкция Switch Case
    - let subs = 10
    h3 Количество подписчиков
    case subs
        when 0
            p У тебя нет подписчиков
        when 1
            p У тебя один подписчик
        when 2
            p У тебя два подписчика
        default 
            p У тебя #{subs} подписчиков
